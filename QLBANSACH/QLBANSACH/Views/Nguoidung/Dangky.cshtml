
@{
    ViewBag.Title = "Đangky";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<div class="login-page">
    <table align="center" style="border: 1px solid; border-radius: 15px; padding: 20px; width: 400px;">
        <tr>
            <td colspan="2">
                <h2 style="text-align:center"> ĐĂNG KÝ THÀNH VIÊN</h2>
            </td>
        </tr>

        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true)
            <tr style="height:40px">
                <td> Họ tên khách hàng: </td>
                <td>
                    @Html.TextBox("HotenKH") @ViewData["Loi1"]
                </td>
            </tr>
            <tr style="height:40px">
                <td> Tên đăng nhập: </td>
                <td>@Html.TextBox("TenDN") @ViewData["Lo12"]</td>
            </tr>

            <tr style="height:40px">
                <td> Mật khẩu: </td>
                <td> @Html.Password("Matkhau") @ViewData["Loi3"]</td>
            </tr>

            <tr style="height:40px">
                <td> Mật khẩu nhật lại:</td>
                <td>
                    @Html.Password("Matkhaunhaplai")
                    @ViewData["Loi4"]
                </td>
            </tr>
            <tr style="height:40px">
                <td> Địa chỉ: </td>
                <td>
                    @Html.TextBox("Diachi")
                </td>
            </tr>
            <tr style="height:40px">
                <td> Email  : </td>
                <td>
                    @Html.TextBox("Email")
                    @ViewData["Loi5"]
                </td>
            </tr>
            <tr style="height:40px">
                <td> Điện thoại: </td>
                <td>
                    @Html.TextBox("Dienthoai")
                    @ViewData["Loi6"]
                </td>
            </tr>
            <tr style="height:40px">
                <td> Ngày sinh : </td>
                <td>
                    <input type="date" name="Ngaysinh" />
                </td>
            </tr>
            <tr style="height:40px">
                <td></td>
                <td>
                    <input type="Submit" value="Đăng ký" />
                </td>
            </tr>
        }
    </table>
</div>