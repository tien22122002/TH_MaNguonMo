
@{
    ViewBag.Title = "Dangnhap";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<div class="login-page">
    <h4 style="color:red; text-align:center"> @ViewBag.Thongbao</h4>
    <table align="center" style="border: 1px solid; border-radius: 15px; padding: 20px; width: 400px;">
        <tr>
            <td colspan="2">
                <h3 style="text-align:center">ĐĂNG NHẬP</h3>
            </td>
        </tr>
        
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true)
            <tr style="height:40px">
                <td> Tên đăng nhật:</td>
                <td>
                    @Html.TextBox("TenDN")
                    @ViewData["Loil"]
                </td>
            </tr>
            <tr style="height:40px">
                <td align="right" style="display:flex;"> Mật khẩu:</td>
                <td>
                    @Html.Password("Matkhau") @ViewData["Loi2"]
                </td>
            </tr>
            <tr style="height:40px">
                <td></td>
                <td>
                    <input type="Submit" value="Đăng nhập" />
                </td>
            </tr>
        }
    </table>
</div>
