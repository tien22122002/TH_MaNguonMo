@model QLBANSACH.Models.SACH

@{
    ViewBag.Title = "Suasach";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>ĐIỀU CHỈNH THÔNG TIN SÁCH</h2>

@using (Html.BeginForm("Suasach", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Masach)

<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <hr />

    <div class="form-group">
        Mã sách
        <div class="col-md-10">
            <div style="font:18px; padding:5px 0 0 5px">@Model.Masach</div>
        </div>
    </div>

    <div class="form-group">
        Tên sách
        <div class="col-md-10">
            @Html.EditorFor(model => model.Tensach, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Tensach, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        Giá bán
        <div class="col-md-10">
            @Html.EditorFor(model => model.Giaban, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Giaban, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        Mô tả
        <div class="col-md-10">
            <textarea name="Mota">@Model.Mota</textarea>
        </div>
    </div>

    <div class="form-group">
        Ảnh bìa
        <div class="col-md-10">
            <input type="file" name="fileUpload" class="form-control" id="inputGroupFile04" aria-describedby="inputGroupFileAddon04" aria-label="Upload" />
            <img src="@Url.Content("~/image/" + Model.Anhbia)" style="width: 140px; height: 180px;" />
            @ViewBag.Thongbao

        </div>
    </div>

    <div class="form-group">
        Ngày cập nhật
        <div class="col-md-10">
            <input class="form-control" type="date" name="Ngaycapnhat" value="@string.Format("{0:yyyy-MM-dd}", @Model.Ngaycapnhat)" placeholder="@string.Format("{0:yyyy-MM-dd}", @Model.Ngaycapnhat)"/>
            @Html.ValidationMessageFor(model => model.Ngaycapnhat, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        Số lượng tồn
        <div class="col-md-10">
            @Html.EditorFor(model => model.Soluongton, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Soluongton, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        Chủ đề
        <div class="col-md-10">
            @Html.DropDownList("MaCD", (SelectList)ViewBag.MaCDList, new { @class = "btn btn-outline-secondary dropdown-toggle" })
        </div>
    </div>
    <div class="form-group">
        Nhà xuất bản
        <div class="col-md-10">
            @Html.DropDownList("MaNXB", (SelectList)ViewBag.MaNXBList, new { @class = "btn btn-outline-secondary dropdown-toggle" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Sach")
</div>
