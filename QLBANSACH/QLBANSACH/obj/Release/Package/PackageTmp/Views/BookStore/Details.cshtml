@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<h2>THÔNG TIN CHI TIẾT SÁCH</h2>
<div style="display:flex;">
    <div style="width:40%; float: left; border-left: dotted 1px; border-color: azure;">
        <img src="~/image/@Model.Anhbia" width="100%" style="padding:30px"/>
    </div>
    <div style="width: 60%; display: flex; flex-direction: column; padding: 30px;">
        <div  float:left; padding: 10px;">
            <h4 style="font-weight: bold; color:red; font-size:22px;">Tên sách: @Model.Tensach </h4>
            <p style="text-align: justify;"><span style="font-weight: bold; ">Mô tả: </span>@Model.Mota</p>
            <p style="font-weight: bold;">Giá bán: <span style="color:red; font-size: 16pt;">@Model.Giaban VNĐ</span></p>
        </div>
        <div>
            <div id="datmua">
                <a href="@Url.Action("ThemGiohang", "Giohang", new {iMasach = Model.Masach, strURL = Request.Url.PathAndQuery})" >
                    Đặt mua
                </a>
            </div>
        </div>
    </div>
</div>


