@model QLBANSACH.Models.SACH
@using System.Web.Mvc.Html


@{
    ViewBag.Title = "Themmoisach";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Thêm sách mới</h2>

@using (Html.BeginForm("Themmoisach", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal" style="padding: 0 400px;">
        <h4>SÁCH</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            Tên sách
            <div class="col-md-10">
                @Html.EditorFor(model => model.Tensach, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Tensach, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Giá bán
            <div class="col-md-10">
                @Html.EditorFor(model => model.Giaban, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Giaban, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Mô tả
            <div class="col-md-10">
                <textarea name="Mota">Mô tả thông tin sách</textarea>
            </div>
        </div>

        <div class="form-group">
            Ảnh bìa
            <div class="col-md-10">
                <input type="file" name="fileUpload" class="form-control" id="inputGroupFile04" aria-describedby="inputGroupFileAddon04" aria-label="Upload" />
                @ViewBag.Thongbao
            </div>
        </div>

        <div class="form-group">
            Ngày cập nhật
            <div class="col-md-10">
                <input name="Ngaycapnhat" class="form-control" type="date" id="html5-date-input">
                @Html.ValidationMessageFor(model => model.Ngaycapnhat, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Số lượng tồn
            <div class="col-md-10">
                @Html.EditorFor(model => model.Soluongton, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Soluongton, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Chủ đề
            <div class="col-md-10">
                @Html.DropDownList("MaCD", (SelectList)ViewBag.MaCD, "--Chọn chủ đề--", new { @class = "btn btn-outline-secondary dropdown-toggle" })
            </div>
        </div>

        <div class="form-group">
            Nhà xuất bản
            <div class="col-md-10">
                    @Html.DropDownList("MaNXB", (SelectList)ViewBag.MaNXB, "--Chọn nhà xuất bản--", new { @class = "btn btn-outline-secondary dropdown-toggle" })
                
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Thêm mới" class="btn btn-success" style="margin-top:10px"/>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("VỀ TRANG QUẢN LÝ SÁCH", "Sach")
</div>
